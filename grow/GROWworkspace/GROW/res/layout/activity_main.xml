<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.grow.MainActivity" >

    <Button
        android:id="@+id/SignUpButton"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/SignInButton"
        android:layout_below="@+id/SignInButton"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_custom"
        android:textColor="@drawable/custom_text_color"
        android:text="@string/OrganizationButton" 
        android:onClick="orgFirstScreen"/>

    <Button
        android:id="@+id/SignInButton"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="132dp"
        android:background="@drawable/button_custom"
        android:textColor="@drawable/custom_text_color"
        android:text="@string/StudentButton"
        android:onClick="studentFirstScreen" />

    <TextView
        android:id="@+id/AppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/SignInButton"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/SignInButton"
        android:layout_marginTop="59dp"
        android:text="@string/AppName"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/grow_green"
        android:textSize="40sp"
        android:typeface="normal" />

</RelativeLayout>